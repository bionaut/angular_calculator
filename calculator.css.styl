@import 'nib'

body, html
	absolute top left
	width 100%
	height 100%
	padding 0
	margin 0
	box-sizing border-box
	clearfix()
	
.loaderIcon
	absolute top left
	margin 0
	padding 0
	width 100%
	height 100%
	background white url(images/380.gif) no-repeat center center
	z-index: 100000
	
calculator
	relative top left
	padding-top 20px
	background-color #6B9831
	border-radius 20px
	margin 20px 0px
	user-select none
	h3
		relative top left
		width auto
		padding 0
		margin 20px 0px
	
	
	.range
		display inline-block
		font-size 0.5em
		padding 0
		margin 0
		relative top left
