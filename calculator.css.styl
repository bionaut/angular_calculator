@import 'nib'

body, html
	absolute top left
	width 100%
	height 100%
	padding 0
	margin 0
	box-sizing border-box
	clearfix()
	
.loaderIcon
	absolute top left
	margin 0
	padding 0
	width 100%
	height 100%
	background white url(images/380.gif) no-repeat center center
	z-index: 100000
	
calculator
	relative top left
	padding-top 20px
	background-color #6B9831
	border-radius 20px
	margin 20px 0px
	user-select none
	h3
		relative top left
		width auto
		padding 0
		margin 20px 0px
	
	
	.range
		display inline-block
		font-size 0.5em
		padding 0
		margin 0
		relative top left


	// RANGE SLIDER			
	
	range-slider
		relative top left
		width 100%
		clearfix()
		
		.slider
			relative top left
			width 80%
			float left
					
		.sliderInput
			relative top left
			width 10%	
			float left
			
		.c_button
			relative top left
			width 30px
			height 30px
			background-color gray
		
	.calculator-info, .block-extend-info
		relative top 20px left
		background-color white
		table
			tr
				border-bottom 1px solid #e4e5ff
				text-align left
