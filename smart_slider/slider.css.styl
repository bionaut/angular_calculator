@import 'nib'

.slider-wrapper
	relative top left
	width 100%
	margin 30px 0px
	clearfix()
	box-sizing: border-box
	user-select none
	font-family Helvetica
	
	.subtract, .add
		relative top left
		float left
		width 5%
		height 20px
		line-height 20px
		background #139afe
		z-index: 110
		cursor: pointer
		border-radius 2px
		&:hover
			transform scale(1.1)
		&:active
			animation pulse2 .2s ease
		
	.subtract:after
		absolute top left
		content '-'
		text-align center
		font-size 18px
		width 100%
		color white
	
	.add:after
		absolute top left
		content '+'
		text-align center
		font-size 18px
		width 100%
		color white

	.bar-wrapper
		relative top left
		float left
		width 60%
		height 20px
		box-shadow: 0px 1px 3px -2px #8f989b
		
		
		.limits, .breakpoints
			absolute top left
			width 100%
			height 20px
			margin-top -20px
			font-size 10px
			color #6c6c6c
			.limit, .breakpoint
				absolute top left
				height 45px
				width auto
				transform translateX(-50%)
				cursor: pointer
				padding 0px 10px
				&:hover
					animation bounce .6s ease
				&:before
					content ''
					absolute top 40px left 50%
					height 5px
					width 1px
					background #6c6c6c
				&:after
					content ''
					absolute top 15px left 50%
					height 5px
					width 1px
					background #6c6c6c
				&:last-child
					transform translateX(10%)
					font-weight: 800
					padding 0px 0px
					&:hover
						animation none
					&:before, &:after
						opacity: 0
		.handle
			absolute top 0px left
			height 20px
			width 10%
			background #16a8f9
			cursor: pointer
			transform translateX(-50%)
			padding 0px 0px
			border-radius 2px
			z-index: 100
			&:after
				content ''
				absolute top left 50%
				width 1px
				height 100%
				background #eefffb
				

		
		.active-bar
			relative top left
			height 100%
			width 0%
			background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAADCAYAAABWKLW/AAAAGklEQVQIW2NkQAKMIHbLyWP/a8ytGMEcGAAASr0EBDrfj/8AAAAASUVORK5CYII=')
			// background url('images/bar.gif')
			// background #ffc679
			// filter: hue-rotate(150deg)
			box-shadow: 0 0 1px -0.5px #959595
	

	.amountInput
		relative top left
		margin-left 0px
		width 16%
		line-height 20px
		text-align center
		float left
		padding 0
		box-shadow: 0px 1px 3px -2px #8f989b
		border none
		


@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0) translateX(-50%);
  }

  40% {
    transform: translateY(-5px) translateX(-50%);
  }

  60% {
    transform: translateY(-2px) translateX(-50%);
  }
}


@keyframes pulse {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(2.2);
  }

  100% {
    transform: scale(2);
  }
}

@keyframes pulse2 {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.5);
  }

  100% {
    transform: scale(1);
  }
}
